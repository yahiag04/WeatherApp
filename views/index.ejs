<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Weather App</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <link rel="stylesheet" href="/styles.css" />
</head>

<body>
  <div class="app-wrapper">
    <div class="glass-card p-4 p-md-5 d-flex flex-column gap-4">

      <header class="text-center">
        <div class="brand-title">ðŸŒ¦ Realtime Weather</div>
        <div class="brand-sub">
          Search by city to get live temperature, humidity, and more.
        </div>
      </header>

      <section class="section-card p-3 p-md-4">
        <form action="/" method="POST" class="d-flex flex-column gap-3">
          <div>
            <label for="city" class="form-label text-light mb-1">City Name</label>
            <input
              type="text"
              id="city"
              name="city"
              class="form-control bg-darkish"
              placeholder="e.g. Milan, London, Tokyo"
              required
            />
          </div>

          <button type="submit" class="btn btn-gradient w-100 py-2">
            Get Weather
          </button>
        </form>

        <% if (locals.error) { %>
          <div class="alert-custom mt-3">
            <strong>âš  Oops:</strong> <%= error %>
          </div>
        <% } %>
      </section>

      <% if (locals.data) { %>
      <section class="section-card p-4 fade-card">
        <div class="d-flex justify-content-between align-items-start flex-wrap mb-3">
          <div>
            <div class="d-flex align-items-center gap-2">
  <div class="city-name mb-0"><%= data.city_name %></div>
    <img
        src="https://flagcdn.com/w40/<%= data.country_code.toLowerCase() %>.png"
        alt="<%= data.country_code %> flag"
        class="flag-icon"
     />
  </div>
    <p class="condition mb-0"><%= data.weather.description %></p>
          </div>
          <div class="text-end">
            <div class="temp-now"><%= data.temp %>Â°C</div>
            <div class="feels-like">Feels like <%= data.app_temp %>Â°C</div>
          </div>
        </div>

        <div class="row text-center g-3">
          <div class="col-6 col-md-4">
            <div class="metric-label">Humidity</div>
            <div class="metric-value"><%= data.rh %>%</div>
          </div>
          <div class="col-6 col-md-4">
            <div class="metric-label">Wind</div>
            <div class="metric-value"><%= data.wind_spd %> m/s</div>
          </div>
          <div class="col-6 col-md-4">
            <div class="metric-label">Direction</div>
            <div class="metric-value"><%= data.wind_cdir_full %></div>
          </div>
          <div class="col-6 col-md-4">
            <div class="sun-label">Sunrise</div>
            <div class="sun-time"><%= data.sunrise %></div>
          </div>
          <div class="col-6 col-md-4">
            <div class="sun-label">Sunset</div>
            <div class="sun-time"><%= data.sunset %></div>
          </div>
        </div>
      </section>
      <% } %>

    </div>
  </div>

    <!-- Footer -->
<footer class="footer fixed-bottom text-center py-3">
  <p class="mb-0">
    Built by 
    <span class="footer-name">Yahia Ghallale</span>
  </p>
  <p class="footer-links mb-0">
    <a href="https://github.com/yahiag04" target="_blank" class="footer-link">GitHub</a> Â·
    <a href="mailto:yahia.ghallale@example.com" class="footer-link">Contact</a>
  </p>
</footer>
</body>
</html>